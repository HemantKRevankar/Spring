	<bean id="triangle" class="com.hemant.spring.model.Triangle">
		<constructor-arg name="type" value="RightAngled Triangle"/>
		<constructor-arg name="pointA" ref="zeroPoint"/>
		<constructor-arg name="pointB" ref="point1"/>
		<constructor-arg name="pointC" ref="point2"/>
	</bean>
	<bean id="zeroPoint" class="com.hemant.spring.model.Point">
		<constructor-arg name="x" value="0"/>
		<constructor-arg name="y" value="0"/>
	</bean>
	<bean id="point1" class="com.hemant.spring.model.Point">
		<constructor-arg name="x" value="-20"/>
		<constructor-arg name="y" value="0"/>
	</bean>
	<bean id="point2" class="com.hemant.spring.model.Point">
		<constructor-arg name="x" value="20"/>
		<constructor-arg name="y" value="0"/>
	</bean>
</beans>